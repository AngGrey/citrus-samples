  <properties>
    <server.port>18001</server.port>
    <server.stop.port>18100</server.stop.port>
    <apache.cxf.version>3.1.4</apache.cxf.version>
    <citrus.version>2.6-SNAPSHOT</citrus.version>
    <jetty.embedded.disabled>true</jetty.embedded.disabled>
    <activemq.embedded.disabled>true</activemq.embedded.disabled>
  </properties>
  
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.activemq.tooling</groupId>
          <artifactId>activemq-maven-plugin</artifactId>
          <version>${activemq.version}</version>
          <configuration>
            <fork>false</fork>
            <systemProperties>
              <property>
                <name>log4j.configuration</name>
                <value>log4j.properties</value>
              </property>
            </systemProperties>
          </configuration>
        </plugin>

        <plugin>
          <groupId>org.eclipse.jetty</groupId>
          <artifactId>jetty-maven-plugin</artifactId>
          <configuration>
            <webAppConfig>
              <!--
                Limit the list of jars jetty scans in WEB-INF/lib when looking for annotations to process
                - this will help speed up jetty startup times
              -->
              <webInfIncludeJarPattern>.*/spring-web[^/]*\.jar$|.*/spring-ws-[^/]*\.jar$</webInfIncludeJarPattern>
            </webAppConfig>
            <httpConnector>
              <port>${server.port}</port>
              <idleTimeout>60000</idleTimeout>
            </httpConnector>
            <stopKey>citrus</stopKey>
            <stopPort>${server.stop.port}</stopPort>
            <stopWait>10</stopWait>
            <systemProperties>
              <systemProperty>
                <name>file.encoding</name>
                <value>UTF-8</value>
              </systemProperty>
              <systemProperty>
                <name>org.eclipse.jetty.annotations.maxWait</name>
                <value>120</value>
              </systemProperty>
              <systemProperty>
                <name>com.sun.management.jmxremote</name>
                <value />
              </systemProperty>
            </systemProperties>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
    
    <plugins>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
  
